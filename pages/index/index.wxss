/**index.wxss**/

@import '../../asset/css/animate.min.wxss';

swiper,swiper-item{
  height: 100%;
}

.wrapper {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    background-position: 50% 50%;
    background-size: cover;
    overflow: hidden;
    position: relative;
}
.wrapper view{
    background-size: cover;
    background-repeat: no-repeat;
    position: absolute;
    display: block;
}

@keyframes animateIn{
  from{
    opacity: 0; 
    top: 0;
  }
  to{
    opacity: 1; 
    top: 20%;
  }
}

.save{
  z-index:99;
  bottom:0;
  position:fixed;
  width:100%;
  box-sizing: border-box;
  background: rgba(0,0,0,.5);
  color: #fff;
  text-align: center;
  height: 40px;
  line-height: 40px;
}



