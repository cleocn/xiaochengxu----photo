

@import '../../asset/css/animate.min.wxss';

swiper,swiper-item{
  height: 100%;
}

.wrapper {
    width: 100%;
    height: 100%;
    margin: 0 auto;
    background-position: 50% 50%;
    background-size: cover;
    overflow: hidden;
    position: relative;
}
.wrapper view{
    background-size: 100% 100%;
    background-repeat: no-repeat;
    position: absolute;
    display: block;
}

.swiper-view{
  width:100%;
  height:100%;
}

@keyframes animateIn{
  from{
    opacity: 0; 
    top: 0;
  }
  to{
    opacity: 1; 
    top: 20%;
  }
}


.list-item{
  display: block;
  background-color: #fff;
  height: 100%;
  z-index: 999;
  position: relative;
}
.list-header{
  background: #fff;
  display: flex;
}
.list-header text{
  flex-basis: 25%;
  text-align: center;
  padding: 10px 0;
  box-sizing: border-box;
  display: block;
  height: 100%;
}
.list-header text.current{
  border-bottom: 1px solid #1aad19;
  color: #1aad19;
}
.list-content{
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
}
.list-content .list-content-m{
  width: 100%;
  display: flex;
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #eee;
}
.list-content .list-content-l{
  width: 31.5%;
  /* height: 300rpx; */
  box-shadow: 3px 3px 3px #ccc;
  background: #fff;
  padding: 10rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  margin-right: 19rpx;
}
.list-content .list-content-l:nth-child(3n){
  margin-right: 0;
}

.list-content .list-content-l image{
  width: 100%;
  height: 195rpx;
  border-radius: 50%;
}
.list-content .list-content-l view{
  text-align: center;
  line-height: 30px;
}

.save{
  z-index:99;
  bottom:0;
  position:fixed;
  width:100%;
  /* height: 40px; */
  /* line-height: 40px; */
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: #fff;
}
.save.hide{
  margin-bottom: 10px;
}
.save view{
  width: 25%;
  text-align: center;
  color: #666;
  display: flex;
  flex-direction: column;
  padding: 3px 0;
}
.save view:last-child{
  background: #ff6765;
  color: #fff;
}

radio-group,checkbox-group{
  width: 100%;
}

.tip{
  text-align: center;
  color: #ccc;
}

.imageTip{
  text-align: center;
  color: #fff;
  z-index:99;
  bottom:70px;
  position:fixed;
  width:100%;
}


image{
  display: block;
  overflow: hidden;
  vertical-align: bottom;
}